@using Collcection.DAL
@{
    var user = Session["UserInfo"] as User;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/Site.css" rel="stylesheet" />
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Inventory System", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                </ul>
                <div class="nav navbar-right">
                    <div class="user-data nav navbar-nav user-link">
                        <a href="~/Main/Logout" class=""><i class="glyphicon glyphicon-log-out"></i>Logout</a>
                        <a href="" class=""> <i class="glyphicon glyphicon-user" ></i>@user.Name</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row container body-content">
            @RenderBody()
        </div>
    </div>
    <hr />
    <div>
        <footer class="container">
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>
        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
    <style>
        .row{padding-top:50px;}
        .container {
            width: 1250px;
        }
        .navbar-inverse {
            background-color: #364B5E;
            border-color: #364B5E;
        }
        .navbar-inverse .navbar-nav > li > a,
        .navbar-inverse .navbar-brand {
            color: #fff;
        }
        .navbar-brand {
            font-size: 31px;
        }
        .navbar-inverse .user-link {
            /*background-color: #fff;*/
            padding: 5px;
            /*margin: -1px;*/
        }
        .navbar-inverse .user-link a {
            float: right;
            position: relative;
            display: block;
            padding-top: 15px;
            padding-bottom: 15px;
            color: #19BC9D;
            font-size: 15px;
            font-weight: bolder;
            margin-right: 15px;
            border-radius:15px;
            padding: 10px 25px;
            background-color:#fff;
        }
        .navbar-inverse .user-link a:hover{
            
        }
    </style>
</body>
</html>


