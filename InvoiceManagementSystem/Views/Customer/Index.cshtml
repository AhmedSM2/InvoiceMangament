@model IEnumerable< Collcection.DAL.Customer>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<h2>Index</h2>
<!-- Customers list-->
<div class="table-responsive">
    <table class="table">
        <caption>List of users</caption>
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Customer_No)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Active)
                </th>
            </tr>
        </thead>
        <tbody>
           @foreach (var item in Model)
           {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Customer_No)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Active)
                </td>
                <td>
                    @Html.ActionLink("Edit", "editCustomer", new { id = item.id })
                    @Html.ActionLink("Details", "Details", new { id = item.id })
                    @Html.ActionLink("Delete", "delteCustomer", new { id = item.id })
                </td>
            </tr>
           }
        </tbody>
    </table>
</div>
<!-- Add Customer-->
<form id="save">
    <div class="form">
        <div class="form-group">
            <label for="exampleFormControlInput1">Customer Number</label>
            <input type="text" class="form-control" id="exampleFormControlInput1" placeholder="" disabled>
        </div>
        <div class="form-group">
            <label for="exampleInputEmail1">Customer Name</label>
            <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Customer Name" name="c.Name">
            <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
        </div>
        <div class="form-check">
         @*   <input type="checkbox" class="form-check-input" id="exampleCheck1" name="Active"/>*@
            <label class="form-check-label" for="exampleCheck1">Active</label>
        </div>
        <button type="submit" class="btn btn-primary" id="send">Add</button>
    </div>
</form>
    
