    </form>*@
@section Scripts{
@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/jqueryval")
<script>
    $(document).ready(function () {
        $("#send").click(function () {
            debugger;
                var mydata = $("#save").serialize();
                $.ajax({
                    type: "POST",
                    url: "/Customer/AddCustomer",
                    data: mydata,
                    success: function (result) {
                        alert("done");
                    }
                })
            } )
        });
</script>
}